{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "THIS_IS_A_SUPER_LONG_SECURE_JWT_KEY_64_CHARACTERS_LONG_1234567890",
    "Issuer": "AuthService",
    "Audience": "AuthClient",
    "AccessTokenExpirationMinutes": 180,
    "RefreshTokenExpirationDays": 7
  },
  "SwaggerServices": [
    {
      "Name": "Authentication Service",
      "Url": "/auth/swagger/v1/swagger.json"
    },
    {
      "Name": "Music Service",
      "Url": "/music/swagger/v1/swagger.json"
    }
  ],



  "ReverseProxy": {
    "Routes": {

      "auth-swagger": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },

      "music-swagger": {
        "ClusterId": "music-cluster",
        "Match": {
          "Path": "/music/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/music"
          }
        ]
      },

      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },

      "music-route": {
        "ClusterId": "music-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7158/"
          }
        }
      },
      "music-cluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7281/"
          }
        }
      }
    }
  }


}
